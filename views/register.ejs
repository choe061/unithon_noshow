<body>

    <div id="container">
      <div id="page-wrapper">
          <div class="row">
              <div class="col-lg-12">
                  <h1 class="page-header">Admin Page</h1>
              </div>
              <!-- /.col-lg-12 -->
          </div>
          <!-- /.row -->
          <div class="row">
            <form id="body" action="/register" method="post" enctype="multipart/form-data">
              <div class="col-lg-12" style="width:650px">
                  <div class="panel panel-default">
                      <div class="panel-heading">
                          Store Info
                      </div>
                      <div class="panel-body">
                          <!--<div class="row">-->

                              <div style="width:100%">
                                    <div class="form-group">
                                      <label>Store List</label>
                                      <select class="form-control" id="store_id" name="store_id" onchange="change()">
                                        <% JSON.parse(store).forEach(function(item) { %>
                                            <option><%= item.id %></option>
                                        <% }); %>
                                      </select>
                                    </div>
                                    <div class="form-group">
                                          <label>Store Detail Info</label>
                                          <input class="form-control" id="store_name" type='text' name="store_name">
                                          <input class="form-control" id="phone" name="phone">
                                          <input class="form-control" id="city" name="city">
                                          <input class="form-control" id="goo" name="goo">
                                          <input class="form-control" id="dong" name="dong">
                                          <input class="form-control" id="lat" name="lat">
                                          <input class="form-control" id="lng" name="lng">
                                          <input class="form-control" id="img" name="img">
                                          <input class="form-control" id="etc" name="etc">
                                    </div>
                              </div>
                          <!--</div>-->
                          <!-- /.row (nested) -->
                      </div>
                      <!-- /.panel-body -->
                  </div>
                  <!-- /.panel -->
              </div>
                <div style="text-align:right;margin-right:70px;">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>
              <!-- /.col-lg-12 -->
          </div>
          <!-- /.row -->
      </div>

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

