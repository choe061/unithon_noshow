    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>

</body>

</html>

<script type="text/javascript">
  var store_data = [];
  <% JSON.parse(store).forEach(function(item) { %>
    var temp = {
      store_name : "<%= item.store_name%>",
      phone : "<%= item.phone%>",
      city : "<%= item.city%>",
      goo : "<%= item.goo%>",
      dong : "<%= item.dong%>",
      lat : "<%= item.lat%>",
      lng : "<%= item.lng%>",
      img : "<%= item.img%>",
      etc : "<%= item.etc%>"
    };
    store_data.push(temp);
  <% }); %>

  document.getElementById("store_name").value = store_data[0].store_name;
  document.getElementById("phone").value = store_data[0].phone;
  document.getElementById("city").value = store_data[0].city;
  document.getElementById("goo").value = store_data[0].goo;
  document.getElementById("dong").value = store_data[0].dong;
  document.getElementById("lat").value = store_data[0].lat;
  document.getElementById("lng").value = store_data[0].lng;
  document.getElementById("img").value = store_data[0].img;
  document.getElementById("etc").value = store_data[0].etc;

  function change() {
    var len = store_data.length;
    var id = parseInt(document.getElementById("store_id").value) - 1 ;

    document.getElementById("store_name").value = store_data[id].store_name;
    document.getElementById("phone").value = store_data[id].phone;
    document.getElementById("city").value = store_data[id].city;
    document.getElementById("goo").value = store_data[id].goo;
    document.getElementById("dong").value = store_data[id].dong;
    document.getElementById("lat").value = store_data[id].lat;
    document.getElementById("lng").value = store_data[id].lng;
    document.getElementById("img").value = store_data[id].img;
    document.getElementById("etc").value = store_data[id].etc;

  }
</script>
